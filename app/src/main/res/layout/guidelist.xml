<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/historyCard"
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"

        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"

        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="0dp"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView

                android:id="@+id/rimageViewguide"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/achut_hari"


                app:riv_corner_radius="8dp"
                app:riv_oval="true" />



                <TextView
                    android:id="@+id/textguide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/rimageViewguide"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="10dp"
                    android:text="Achut Hari Rijal"

                    android:textSize="20sp"
                    android:textStyle="bold" />


                      <TextView
                        android:id="@+id/guide_langPref"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                          android:layout_below="@+id/textguide"
                        android:layout_toRightOf="@id/rimageViewguide"

                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginRight="10dp"
                        android:text="English"

                        android:textSize="10sp"
                        android:textStyle="normal" />
            <TextView
                android:id="@+id/guide_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rimageViewguide"
                android:layout_below="@+id/guide_langPref"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="10dp"
                android:text=" 98510-71493"

                android:textSize="10sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/guide_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@id/rimageViewguide"
                android:layout_below="@+id/guide_mobile"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="10dp"
                android:text="achyut_rijal@hotmail.com"

                android:textSize="10sp"
                android:textStyle="normal" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>